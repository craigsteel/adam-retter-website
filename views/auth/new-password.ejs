<%- include('../includes/head.ejs') %>
  </head>

  <body>
    <div class="wrapper">

      <header class="header">

        <%- include('../includes/navigation.ejs') %>

          <div class="header__name-desktop">
            <img loading="auto" src="images/Adam-Home-oneline-v1-thick.png" alt="Java logo"></img>
          </div>

          <div class="header__name-mobile header__home-name-mobile">
            <img loading="auto" src="images/Adam-Home-mobile-v1-thick.png" alt="Java logo"></img>
          </div>

          <main>
            <div class="signup-in">
              <% if (errorMessage) { %>
                <div class="user-message user-message--error">
                  <%= errorMessage %>
                </div>
                <% } %>

                  <h2>Update Password</h2>

                  <form class="signup-in__login" action="/new-password" method="POST">

                    <div class="signup-in__form">
                      <label for="password">Password</label>
                      <input type="password" name="password" id="password">
                    </div>

                    <div class="button center">
                      <input type="hidden" name="userId" value="<%= userId %>">
                      <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button class="button__btn button__btn--magenta" type="submit">Update Password</button>
                    </div>
                  </form>
            </div>
          </main>

      </header>
    </div>
    <%- include('../includes/end.ejs') %>
