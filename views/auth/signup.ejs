<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

  <body>
    <div class="wrapper">

      <header class="header">

        <%- include('../includes/navigation.ejs') %>

            <div class="header__name-desktop">
              <img loading="auto" src="images/Adam-Home-oneline-v1-thick.png" alt="Java logo"></img>
            </div>

            <div class="header__name-mobile header__home-name-mobile">
              <img loading="auto" src="images/Adam-Home-mobile-v1-thick.png" alt="Java logo"></img>
            </div>

            <main>
              <div class="signup-in">

                  <h2>Sign Up</h2>

                    <form class="signup-in__login" action="/signup" method="POST">

                        <div class="signup-in__form">
                          <label for="email">Enter Your Email</label>
                          <input type="email" name="email" id="email">
                        </div>

                        <div class="signup-in__form">
                          <label for="password">Enter A Password</label>
                          <input type="password" name="password" id="password">
                        </div>

                        <div class="signup-in__form">
                          <label for="confirmPassword">Confirm Password</label>
                          <input type="password" name="confirmPassword" id="confirmPassword">
                        </div>

                        <div class="button center">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          <button class="button__btn button__btn--magenta" type="submit" > SIGNUP ></button>
                        </div>
                   </form>
              </div>
            </main>

        </header>
        </div>

      <%- include('../includes/end.ejs') %>

