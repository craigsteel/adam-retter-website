<body>
   <%- include('../includes/navigation.ejs') %>

    <div class="header__title">
      <h1>Add Content</h1>
    </div>
    <main>
      <section class="main-area">
        <div class="header__title">
          <h3>Presentations</h3>
        </div>
          <div class="main-area__form">

            <form class="content-form" action="/admin/add-content" method="POST">
              <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
              </div>

              <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"></textarea>
              </div>

              <div class="form-control">
                <label for="slidesLink">slides Link</label>
                <input type="text" name="slidesLink" id="slidesLink">
              </div>

              <div class="form-control">
                <label for="slidesIcon">Slides Icon</label>
                <input type="text" name="slidesIcon" id="slidesIcon">
              </div>

              <div class="form-control">
                <label for="pdfLink">pdf Link</label>
                <input type="text" name="pdfLink" id="pdfLink">
              </div>

              <div class="form-control">
                <label for="pdfIcon">pdf Icon</label>
                <input type="text" name="pdfIcon" id="pdfIcon">
              </div>

              <button class="button__btn button__btn--submit" type="submit">Add Content</button>
            </form>
          </div>

      </section>
    </main>
