<body>
   <%- include('../includes/navigation.ejs') %>

    <div class="header__title">
      <h1>Add Content</h1>
    </div>

      <main>

        <section class="main-area">

          <div class="header__title">
            <h3>Presentations</h3>
          </div>

            <div class="main-area__form">

              <form class="content-form" action="/admin/add-content" method="POST">

                <div class="form-control">
                  <label for="title">Title</label>
                  <input type="text" name="title" id="title">
                </div>

                <div class="form-control">
                  <label for="description">Description</label>
                  <textarea name="description" id="description" rows="5"></textarea>
                </div>

                <div class="form-control">
                  <label for="firstIcon">Icon</label>
                  <label class="form-control__example">(slide-icon, pdf-icon or youtube-icon)</label>
                  <input type="text" name="firstIcon" id="firstIcon">
                </div>

                <div class="form-control">
                  <label for="firstLink">Add full Link</label>
                  <input type="text" name="firstLink" id="firstLink">
                </div>

                <div class="form-control">
                  <label for="secondIcon">Icon</label>
                  <label class="form-control__example">(slide-icon, pdf-icon or youtube-icon)</label>
                  <input type="text" name="secondIcon" id="secondIcon">
                </div>

                <div class="form-control">
                  <label for="secondLink">Add full Link</label>
                  <input type="text" name="secondLink" id="secondLink">
                </div>

                <div class="form-control">
                  <label for="thirdIcon">Icon</label>
                  <label class="form-control__example">(slide-icon, pdf-icon or youtube-icon)</label>
                  <input type="text" name="thirdIcon" id="thirdIcon">
                </div>

                <div class="form-control">
                  <label for="thirdLink">Add full Link</label>
                  <input type="text" name="thirdLink" id="thirdLink">
                </div>

                <button class="button__btn button__btn--submit" type="submit">Add Content</button>

              </form>
            </div>

        </section>

      </main>

<%- include('../includes/end.ejs') %>
