<%- include('../includes/head.ejs') %>
  </head>

  <body>

    <header class="header header__presentation">

      <%- include('../includes/navigation.ejs') %>

        <div class="header__content">
          <div class="header__name-desktop-admin ">
            <img loading="auto" src="../images/Adam-Home-oneline-v1.png" alt="Java logo"></img>
          </div>

          <div class="header__name-mobile">
            <img loading="auto" src="../images/Adam-Home-mobile-v1.png" alt="Java logo"></img>
          </div>
    </header>

    <main>
      <section class="main-area main-area__edit">

        <div class="header__edit">
          <h1>Add Open Source Repositories</h1>
        </div>

        <div class="main-area__form">
          <form class="content-form" action="/admin/<% if (editing) { %>edit-opensource<% } else { %>add-opensource<% } %>" method="POST">

            <div class="form-control">
              <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= source.title %><% } %>">
            </div>

            <div class="form-control">
              <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= source.description %><% } %></textarea>
            </div>

            <div class="form-control">
              <label for="firstIcon">Icon</label>
                <label class="form-control__example">(github-icon)</label>
                  <input type="text" name="gitHubIcon" id="gitHubIcon" value="<% if (editing) { %><%= source.gitHubIcon %><% } %>">
            </div>

            <div class="form-control">
              <label for="firstLink">Add full Link</label>
                <input type="text" name="gitHubLink" id="gitHubLink" value="<% if (editing) { %><%= source.gitHubLink %><% } %>">
            </div>

            <div class="form-control">
              <label for="firstLink">Add a description for link</label>
                <label class="form-control__example">(Read More >)</label>
              <input type="text" name="gitHubLinkText" id="gitHubLinkText" value="<% if (editing) { %><%= source.gitHubLinkText %><% } %>">
            </div>

            <% if (editing) { %>
              <input type="hidden" value="<%= source._id %>" name="sourceId">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="button__btn button__btn--submit" type="submit">
              <% if (editing) { %>Update Open Source<% } else { %>Add Open Source<% } %></button>
          </form>
        </div>

      </section>
    </main>

    <%- include('../includes/end.ejs') %>
