<%- include('../includes/head.ejs') %>
  </head>

  <body>
    <div class="wrapper">

      <header class="header header__presentation">

        <%- include('../includes/navigation.ejs') %>

          <div class="header__content">
            <div class="header__name-online">
              <img loading="auto" src="../images/Adam-Home-oneline-v1.png" alt="Java logo"></img>
            </div>

            <div class="header__name-mobile">
              <img loading="auto" src="../images/Adam-Home-mobile-v1.png" alt="Java logo"></img>
            </div>

            <h1 class="presentations__title">
              Admin Content
            </h1>
            <h3 class="presentations__intro">
              < All Presentations and Content can be changed here >
            </h3>
          </div>
      </header>

      <main>

        <section class="presentations presentation__page presentation__admin">
          <div class="admin__title">
            All Presentations >
          </div>

              <% if (prods.length> 0) { %>

                <ul class="presentations__cards presentations__cards--center cards">
                  <% for (let presentation of prods) { %>
                    <div class="admin__edit">
                      <div class="presentations__card card">
                        <div class="card__content">

                          <div class="card__title">
                            <%= presentation.title %>
                          </div>

                          <div class="card__text">
                            <p>
                              <%= presentation.description %>
                            </p>
                          </div>

                          <div class="card__link">
                            <a class="card__link-pdf" href="<%= presentation.firstLink %>" alt="link to page">
                              <img loading="auto" src="../images/svgs/sprite.svg#<%= presentation.firstIcon %>" alt="icon image"></img>
                            </a>

                            <a class="card__link-slides" href="<%= presentation.secondLink %>" alt="link to page">
                              <img loading="auto" src="../images/svgs/sprite.svg#<%= presentation.secondIcon %>" alt="icon image"></img>
                            </a>

                            <a class="card__link-slides" href="<%= presentation.thirdLink %>" alt="link to page">
                              <img loading="auto" src="../images/svgs/sprite.svg#<%= presentation.thirdIcon %>" alt="icon image"></img>
                            </a>
                          </div>

                        </div>
                      </div>

                      <div class="button button__admin">
                        <form action="/admin/delete-presentation" method="POST">
                          <button class="button__btn button__btn--magenta" type='submit' alt="Delete presentation"> Delete ></button>
                        </form>
                        <a class="button__btn button__btn--magenta" href="/admin/edit-presentation" alt="Delete presentation"> Edit ></a>
                      </div>
                    </div>
                  <% } %>
                </ul>

              <% } else { %>
              <h2>No Presentations Found!</h2>
              <% } %>

                <div class="button">
                  <a class="button__btn button__btn--magenta" href="/presentations" alt="link to Presentations Page" target="_blank" rel="noopener noreferrer"> Presentations Page ></a>
                </div>

        </section>

      </main>

    </div>

    <%- include('../includes/end.ejs') %>
